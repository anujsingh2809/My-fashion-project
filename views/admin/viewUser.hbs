{{>admin_header}}

<body>
    <div class="pt-5 pb-4">
        <div class="container">
            <div class="row align-items-center" data-aos="fade-up" data-aos-duration="1100">
                <div class="col">
                    <h2>User Details</h2>
                </div>
                <div class="col-auto">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="javascript:void(0)"><i class="icon feather icon-home"></i></a></li>
                            <li class="breadcrumb-item active" aria-current="page"><a href="/my-admin">Back to Home  </a></li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <main>
        <div class="container">
            <div class="row">
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th class="text-center">Key</th>
                            <th class="text-center">Value</th>
                        </tr>
                    </thead>
