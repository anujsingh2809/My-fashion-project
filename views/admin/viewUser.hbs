                        <tr>
                            <td data-title="Name" class="text-center"><b>Name</b></td>
                            <td data-title="Value" class="text-center">{{Name}}</td>
                        </tr>
                        <tr>
                            <td data-title="Email" class="text-center"><b>Email</b></td>
                            <td data-title="Value" class="text-center">{{Email}}</td>
                        </tr>
                        <tr>
                            <td data-title="Email" class="text-center"><b>Phone</b></td>
                            <td data-title="Value" class="text-center">{{Phone}}</td>
                        </tr>
                        <tr>
                            <td data-title="Email" class="text-center"><b>Address</b></td>
                            <td data-title="Value" class="text-center">{{Address}}</td>
                        </tr>
                        <tr>
                            <td data-title="Email" class="text-center"><b>Password</b></td>
                            <td data-title="Value" class="text-center">{{Password}}</td>
                        </tr>
                    </tbody>
                </table>
                <a href="/my-admin/viewUser" class="th_btn mx-auto">Prev</a>
                <a href="/my-admin/viewUser" class="th_btn mx-auto">Next</a>
